# ===================================
# Drug Interaction Checker - Environment Variables
# Copy this file to .env and fill in your actual values
# ===================================

# EmailJS Configuration (Universal - all languages)
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_SERVICE_ID=your_emailjs_service_id_here
EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here

# AI Service API Keys (Universal - all languages)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# Country-Specific Drug Database APIs
# ===================================

# 🇺🇸 United States - FDA OpenFDA API
FDA_API_KEY=your_fda_api_key_here
FDA_API_URL=https://api.fda.gov/drug/

# 🇰🇷 South Korea - 식약처 (MFDS) 의약품안전나라
MFDS_API_KEY=your_mfds_api_key_here
MFDS_API_URL=https://nedrug.mfds.go.kr/api/

# 🇯🇵 Japan - PMDA 医薬品医療機器情報
PMDA_API_KEY=your_pmda_api_key_here
PMDA_API_URL=https://www.pmda.go.jp/api/

# 🇨🇳 China - NMPA 国家药品监督管理局
NMPA_API_KEY=your_nmpa_api_key_here
NMPA_API_URL=https://www.nmpa.gov.cn/api/

# 🇪🇸 Spain - AEMPS Agencia Española de Medicamentos
AEMPS_API_KEY=your_aemps_api_key_here
AEMPS_API_URL=https://www.aemps.gob.es/api/

# 🇮🇹 Italy - AIFA Agenzia Italiana del Farmaco
AIFA_API_KEY=your_aifa_api_key_here
AIFA_API_URL=https://www.aifa.gov.it/api/

# 🇫🇷 France - ANSM Agence Nationale de Sécurité du Médicament
ANSM_API_KEY=your_ansm_api_key_here
ANSM_API_URL=https://www.ansm.sante.fr/api/

# 🇩🇪 Germany - BfArM Bundesinstitut für Arzneimittel
BFARM_API_KEY=your_bfarm_api_key_here
BFARM_API_URL=https://www.bfarm.de/api/

# 🇵🇹 Portugal - INFARMED Autoridade Nacional do Medicamento
INFARMED_API_KEY=your_infarmed_api_key_here
INFARMED_API_URL=https://www.infarmed.pt/api/

# 🇸🇦 Saudi Arabia - SFDA الهيئة العامة للغذاء والدواء
SFDA_API_KEY=your_sfda_api_key_here
SFDA_API_URL=https://www.sfda.gov.sa/api/

# 🇮🇳 India - CDSCO भारतीय औषधि नियंत्रक
CDSCO_API_KEY=your_cdsco_api_key_here
CDSCO_API_URL=https://cdsco.gov.in/api/

# 🇷🇺 Russia - Росздравнадзор
ROSZDRAVNADZOR_API_KEY=your_roszdravnadzor_api_key_here
ROSZDRAVNADZOR_API_URL=https://roszdravnadzor.gov.ru/api/

# 🇮🇩 Indonesia - BPOM Badan Pengawas Obat dan Makanan
BPOM_API_KEY=your_bpom_api_key_here
BPOM_API_URL=https://www.pom.go.id/api/

# 🇻🇳 Vietnam - Bộ Y tế Việt Nam
MOH_VN_API_KEY=your_moh_vn_api_key_here
MOH_VN_API_URL=https://moh.gov.vn/api/

# 🇹🇷 Turkey - Türkiye İlaç ve Tıbbi Cihaz Kurumu
TITCK_API_KEY=your_titck_api_key_here
TITCK_API_URL=https://www.titck.gov.tr/api/

# 🇲🇽 Mexico - COFEPRIS Comisión Federal de Protección
COFEPRIS_API_KEY=your_cofepris_api_key_here
COFEPRIS_API_URL=https://www.gob.mx/cofepris/api/

# ===================================
# Geolocation Service (for language detection)
# ===================================

# IP Geolocation API (ipapi.co is free for 30k requests/month)
# Alternatives: ipgeolocation.io, ip-api.com
GEOLOCATION_API_KEY=optional_for_premium_features
GEOLOCATION_API_URL=https://ipapi.co/json/

# ===================================
# Development Settings
# ===================================

# Enable debug mode
DEBUG=false

# Default language (if detection fails)
DEFAULT_LANGUAGE=en-us

# Cache duration for drug data (in seconds)
CACHE_DURATION=3600

# ===================================
# Notes
# ===================================

# 1. Most drug database APIs require registration and approval
# 2. Some APIs may have rate limits or require institutional access
# 3. For development, you can start with FDA OpenFDA API (no key required)
# 4. EmailJS and AI APIs are optional but recommended for full functionality
# 5. Geolocation API is optional - browser language detection works without it
# 6. Keep this file secure and never commit it to version control

